# ==========================================================
# ENVIRONMENT VARIABLES - BluffBuddy Backend
# ==========================================================
# @owner DEV1 (Infrastructure)
# @version v1.0.0
#
# Copy this file to .env and fill in values
# NEVER commit .env to version control!
# ==========================================================

# ----------------------------------------------------------
# APP
# ----------------------------------------------------------
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# ----------------------------------------------------------
# REDIS (MANDATORY)
# ----------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ----------------------------------------------------------
# FIREBASE
# ----------------------------------------------------------
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=
GOOGLE_APPLICATION_CREDENTIALS=./firebase-service-account.json

# ----------------------------------------------------------
# JWT / AUTH
# ----------------------------------------------------------
JWT_SECRET=change-this-in-production
JWT_EXPIRES_IN=7d

# ----------------------------------------------------------
# RATE LIMITING
# ----------------------------------------------------------
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# ----------------------------------------------------------
# SOCKET.IO
# ----------------------------------------------------------
SOCKET_PING_INTERVAL=25000
SOCKET_PING_TIMEOUT=20000
SOCKET_MAX_HTTP_BUFFER_SIZE=65536

# ----------------------------------------------------------
# GAME CONFIG
# ----------------------------------------------------------
TURN_TIMEOUT_SECONDS=30
TARGET_SELECTION_TIMEOUT=10
RECONNECT_GRACE_PERIOD=120

# ----------------------------------------------------------
# LOGGING
# ----------------------------------------------------------
LOG_LEVEL=debug
LOG_PRETTY=true
