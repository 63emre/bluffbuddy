{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "paths": {
      "@shared": ["shared/index"],
      "@shared/*": ["shared/*"],
      "@contracts": ["shared/contracts/index"],
      "@contracts/*": ["shared/contracts/*"],
      "@game": ["game/index"],
      "@game/*": ["game/*"],
      "@social": ["social/index"],
      "@social/*": ["social/*"],
      "@auth": ["auth/index"],
      "@auth/*": ["auth/*"],
      "@database": ["database/index"],
      "@database/*": ["database/*"],
      "@infrastructure": ["infrastructure/index"],
      "@infrastructure/*": ["infrastructure/*"],
      "@rating": ["rating/index"],
      "@rating/*": ["rating/*"],
      "@economy": ["economy/index"],
      "@economy/*": ["economy/*"],
      "@common": ["common/index"],
      "@common/*": ["common/*"],
      "@config": ["config/index"],
      "@config/*": ["config/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}